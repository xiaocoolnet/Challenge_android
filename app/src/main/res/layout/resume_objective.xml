<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <include layout="@layout/title_back_compelete"/>
        <TextView
            android:text="求职意向"
            style="@style/title_text"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/objective_group_item">
        <LinearLayout
            android:id="@+id/work_property"
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="工作性质"/>
            <TextView
                style="@style/air_cushion"/>
            <TextView
                style="@style/objective_right_textview"
                android:text="全职"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>
        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="工作地点"/>
            <TextView
                style="@style/air_cushion"/>
            <TextView
                style="@style/objective_right_textview"
                android:text="北京"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>

        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="职位类型"/>
            <TextView
                style="@style/air_cushion"/>
            <TextView
                style="@style/objective_right_textview"
                android:text="产品经理"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>

        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="行业类别"/>
            <TextView
                style="@style/air_cushion"/>
            <TextView
                style="@style/objective_right_textview"
                android:text="互联网"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>

        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="期望薪资"/>
            <TextView
                style="@style/air_cushion"/>
            <TextView
                style="@style/objective_right_textview"
                android:text="4k-6k/月"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>

        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="工作状态"/>
            <TextView
                style="@style/air_cushion"/>
            <TextView
                style="@style/objective_right_textview"
                android:text="离职，可立即上岗"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <include layout="@layout/title_back_compelete"/>
        <TextView
            style="@style/title_text"
            android:text="求职意向"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/PopFlag"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>