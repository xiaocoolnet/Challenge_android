<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgc">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <include layout="@layout/title_back_compelete"/>
        <TextView
            style="@style/title_text"
            android:text="项目经验"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/objective_group_item">
        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="项目名称"/>
            <TextView
                style="@style/air_cushion"/>
            <TextView
                style="@style/objective_right_textview"
                android:text="输入项目名称"/>
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>
        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="开始时间"/>
            <TextView
                style="@style/air_cushion"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>

        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="结束时间"/>
            <TextView
                style="@style/air_cushion"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            style="@style/segmentation"/>

        <LinearLayout
            style="@style/objective_row_item">
            <TextView
                style="@style/objective_left_textview"
                android:text="项目描述"/>
            <TextView
                style="@style/air_cushion"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>